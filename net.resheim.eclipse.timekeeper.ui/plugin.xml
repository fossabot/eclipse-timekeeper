<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.views">
      <category
            name="Timekeeper"
            id="net.resheim.eclipse.timekeeper.ui">
      </category>
      <view
            name="Workweek"
            icon="icons/full/eview16/date_obj.gif"
            category="net.resheim.eclipse.timekeeper.ui"
            class="net.resheim.eclipse.timekeeper.ui.views.WorkWeekView"
            id="net.resheim.eclipse.timekeeper.ui.views.workWeek">
      </view>
   </extension>
   <extension
         point="org.eclipse.mylyn.tasks.core.taskActivationListeners">
      <listener
            class="net.resheim.eclipse.timekeeper.internal.TaskActivationListener"
            id="net.resheim.eclipse.timekeeper.taskActivationListener">
      </listener>
   </extension>
   <extension
         point="org.eclipse.ui.contexts">
      <context
            id="net.resheim.eclipse.timekeeper.ui.workweek"
            name="Workweek"
            parentId="org.eclipse.ui.contexts.window">
      </context>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="net.resheim.eclipse.timekeeper.ui.commands.CopyTaskDetailsToHTML"
            id="net.resheim.eclipse.timekeeper.copyTaskToHTML"
            name="Copy Details to HTML">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:net.resheim.eclipse.timekeeper.ui.views.workWeek?after=task">
         <command
               commandId="net.resheim.eclipse.timekeeper.copyTaskToHTML"
               label="Copy Details to HTML"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            class="net.resheim.eclipse.timekeeper.ui.preferences.TimekeeperPreferences"
            id="net.resheim.eclipse.timekeeper.ui.preferences.TimekeeperPreferences"
            name="Timekeeper">
      </page>
   </extension>
   <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="net.resheim.eclipse.timekeeper.ui.preferences.PreferenceInitializer">
      </initializer>
   </extension>

</plugin>
